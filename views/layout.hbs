<html lang="en">

<head>
  <title>{{title}}</title>
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous"> 
  <script type="text/javascript" src="/javascripts/comment.js"> </script>
</head>

<body style="background-color:#E6E5EA">
<div class="whole-page">
  <div class="container">
  <div  class="header clearfix">
    <nav class="navbar navbar-expand-xxl navbar-light  w-100" style="background-color: #E6E5EA" >
       <a class="navbar-brand" href="/"><h1>♠️ Acebook 📖</h1></a>
       <ul id="navbarMenu" class="nav nav-pills">
                  {{#if session}}
         <li id="dashboardNav" class="nav-item">
           <a class="nav-link" href="/posts">🏠 Timeline</a>
         </li>
         <li id="accountNav" class="nav-item">
           <a class="nav-link" href="/users/profile/{{session.user.username}}"> 👤 Profile</a>
         </li>
         <li id="accountNav" class="nav-item">
           <a class="nav-link" href="/friends">👥 Friends</a>
         </li>
         <li id="logoutNav" class="nav-item">
           <a class="nav-link" href="/sessions/new"><form class="logout-button" action="/sessions?_method=DELETE" method="POST">
          <input class= "nav-button" type="submit" value=" ✖️ Log Out" />
  </form></a>
         </li>
                    {{else}}
        <li class="nav-item">
          <a class="nav-link" href="/sessions/new">Login</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/users/new">Signup</a>
        </li>
            {{/if}}
       </ul>
    </nav>
  </div>
  <hr />
  {{{body}}}
</div>
</body>

</html>

