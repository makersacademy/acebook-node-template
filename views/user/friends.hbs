<div class="navbar">
  <div class="logo-container">
    <a href="/"><img class="logo" src="/images/acebook_icn_wht.png" alt="LogoIcon"></a>
  </div>
  <div class="link-container">
    <img class="profpic" src="/images/blank_profile.jpg" alt="Avatar">
    <a class="link" href="/user/{{user.id}}">Hello, {{user.firstName}}!</a>
    <a class="link" href="/user/requests">Friend requests</a>
    <a class="link" href="/user">Users</a>
    <a class="link" href="/user/logout">Log Out</a>
    <a href="/" class="logo"></a>
  </div>
</div>

<h1>Friends</h1>
<div class="card-container">
  {{#each user.friends }}
  <div class="card">
    <img class="card-profilePic" src="/images/blank_profile.jpg" alt="profile picture">
    <div class="container">
      <a class="card-name" href="/user/{{this.id}}"> {{this.firstName}} {{this.surname}}</a>
        <input type="hidden" name="userId" value="{{user.id}}">
    </div>
  </div>
  {{/each }}
</div>