<h1>Search</h1>
<ul class="search">
  {{#each usersAndPicsAndFriends}}
  <div>
    <img id="profile-pic" src="data:{{this.picture.contentType}};base64, {{this.picture.img.data}}" style="height:150px;width:260px;" />
  <div>
  <li>{{this.user.firstName}}</li>
  <li>{{this.user.lastName}}</li>
  <form action="/users/profile/{{this.user.username}}" method="get">
    <input type="submit" value="profile: {{this.user.firstName}}" />

</form>
  {{#if this.notFriends}}
  <button class="request-button" value={{this.user.id}}>Send friend request</button>
  <script type="text/javascript" src="/javascripts/friendship.js"> </script>
  {{/if }}
  {{/each}}
</ul>
