<h1 class="title">Profile Page</h1>

<p class="greeting">This profile page is about {{email}}</p>
<div class="posts">
  <ul class="posts">
  {{#each posts}}
    <div class="post-container">
      <li class="each-message">{{this.message}}<br>{{this.date}}<br>{{this.user}}
        <form action="/posts/delete" method="post" class="delete" >
          <input name="_id" type="hidden" value="{{this._id}}">
          <input name="delete" type="submit" value ="üóëÔ∏è">
        </form>
      </li>
      <div class="like-container">
        <form action="/posts/updateLikes/{{this.id}}" method="post">
          <button id="like-button"> üëç </button>
        </form> 
        <span id="like-counter">{{this.likes}}</span>
      </div>
    </div>
    
    <div class = "comments">
      <form action="/posts/comment/{{this._id}}" method="get">
        <button id="comment-button">
          Comment
        </button>
      </form>
      <h3> Comments: </h3>
      <div class='comment-container'>
        <ul class="Comment-List">
          {{#each this.comments}}
            <li id="commenting"> {{this}} </li>
          {{/each}}
        </ul>
      </div>
    </div>
    {{/each}}
  </ul>
</div>