
<div id="profile-pic-container">
  <h1 class="title"> {{user.firstName}} {{user.lastName}}</h1>

    <div>
      <img id="profile-pic" src="data:{{profile_pic.img.contentType}};base64, {{profile_pic.img.data}}" style="height:auto;width:260px;" />
    <div>


    {{#if pageOwnerBool}}

  <form action="/image" method="POST" enctype="multipart/form-data">
  <div>
      <label for="image">⬇️Upload Profile Picture⬇️</label>
      </br>
      <input class="btn btn-primary" type="file" id="image" name="image" value="" required />
    </div>
    <div>
      <br />
      <button class="btn btn-primary" type="submit">Upload!</button>
      <br />
    </div>
  </form>

  <form action="/posts/new" method="get">
    <input class="btn btn-primary" type="submit" value="New post" />
  </form>
  <div>
</div>

<div id ="profile-friends-container">
    <h2 class="title">{{user.firstName}}'s Friends</h2>
    <div  class = "row"> 
        {{#each friends}}
         <div id="profile-friends-card" class = "col-3">
         <li> 

<a href={{this.user.username}}/>
    {{this.user.firstName}} {{this.user.lastName}}
    <img id="profile-pic" src="data:{{this.picture.contentType}};base64, {{this.picture.img.data}}" style="height:auto;width:50px;" /></a>

          </li>
         </div>
      {{/each}}
    </div>
  </div>
</div>

<div class="profile-posts-container">
  <h2 >{{user.firstName}}'s Posts </h2>
  <ul>
  {{#each posts}}
    <div class="profile-posts">
    <li>{{this.content}}</li> 
    <li class="post-date">{{this.date}}</li>
    </div>
  {{/each}}
  </ul>
</div>
  <script type="text/javascript" src="/javascripts/upload_limit.js"></script>


  {{! it's my friends page }}
{{else if friendsBool}}
  <p>You and {{user.firstName}} are friends!</p>

  <div>
    <h2 class="title">{{user.firstName}}'s Friends</h2>
    <ul>
      {{#each friends}}
        <li>

<li> 

<a href={{this.user.username}}/>
    {{this.user.firstName}} {{this.user.lastName}}
    <img id="profile-pic" src="data:{{this.picture.contentType}};base64, {{this.picture.img.data}}" style="height:auto;width:50px;" /></a>

        </li>
      {{/each}}
    </ul>
  </div>
  {{!there is a request. It's their page. I have sent the request}}
{{else if myRequestBool}}
  <p>I have sent {{user.firstName}} a friend request!</p>

  {{!there is a request. They have sent the request}}
{{else if theirRequestBool}}
  <p>{{user.firstName}} has sent you a friend request!</p>

  {{! it's a strangers page}}
{{else}}

  <button id="request-button" value={{user.id}}>Send friend request!</button>
  <script type="text/javascript" src="/javascripts/friendship.js"> </script>
 
<p>You and {{user.firstName}} are not friends yet!</p>
{{/if}}
</div>
