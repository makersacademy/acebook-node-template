<div class="sign-up-form">
  <form class="sign-up" id="new-user-form" action="/users" method="post">
    <h2>
    <label for="firstname">First Name: </label>
    <input class="input-box" id="firstname" type="text" name="firstname" value="">
    </h2>
    <h2>
      <label for="lastname">Last Name: </label>
    <input class="input-box" id="lastname" type="text" name="lastname" value="">
    </h2>
    <h2>
      <label for="email">Email: </label>
    <input class="input-box" id="email" type="email" name="email" value="">
    </h2>
    <h2>
      <label for="password">Password: </label>
    <input class="input-box" id="password" type="password" name="password" value="">
    </h2>
    <input class="input-submit" id="submit" type="submit" value="Submit">
  </form>
</div>
