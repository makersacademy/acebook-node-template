<form action='/sessions?_method=DELETE' method='POST'>
      <input type="submit" value="Log Out"></form>

<h1>{{ post.message }}</h1>
<p>Author: {{ post.postAuthor.firstName }} {{ post.postAuthor.lastName }}</p>

    <button class="likeButton" data-postid="{{ post._id }}">Like</button>
<span id="likesCount-{{ post._id }}">{{ post.likes.length }}</span> likes

<script>
  const likeButtons = document.querySelectorAll('.likeButton');

  likeButtons.forEach(button => {
    button.addEventListener('click', () => {
      const postId = button.getAttribute('data-postid');
      const likesCountElement = document.getElementById(`likesCount-${postId}`);

      // Disable the like button
      button.disabled = true;

      fetch(`/posts/${postId}/like`, { method: 'POST' })
        .then(response => response.json())
        .then(data => {
          likesCountElement.textContent = data.likesCount;
        })
        .catch(error => {
          console.log(error);
        })
        .finally(() => {
          // Re-enable the like button after the request is completed
          button.disabled = false;
        });
    });
  });
</script>

<ul class="comments">
  {{#each post.comments}}
  <li>{{this.author}}</li>
  <li>{{ this.message }}</li>
  {{/each}}
</ul>

<form action="/posts/{{ post._id }}/comments" method="POST">
  <textarea name="message" input="text" placeholder="Leave a comment"></textarea>
  <button type="submit">Submit</button>
</form>



