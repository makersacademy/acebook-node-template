<style>
  body {
      background-color: rgb(238, 240, 243);
    }

  #logout_button {
      background-color: transparent;
      border-width: 0;
      font-family: inherit;
      font-size: inherit;
      font-style: inherit;
      font-weight: inherit;
      line-height: inherit;
      padding: 0;
      color: rgb(36, 90, 247);
      margin-right: 1rem;
    }

    .post-container, .comments-container {
      text-align: center;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .likeButton {
      font-size: 1.2rem;
      padding: 2px 6px;
    }
    
    .post-image {
      max-width: 1000px;
      width: 100%;
      height: auto;
    }
</style>

<div class="container-fluid px-0">
    <nav class="navbar navbar-expand-lg bg-body-tertiary shadow-sm border-bottom ">
      <div class="container-fluid">
        <a class="navbar-brand" href="sessions/new">
          <img src="/images/logo.png" alt="Logo" width="100" height="40" class="d-inline-block align-text-top">

        </a>
        <a href="../posts" class="text-decoration-none">Timeline</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
          aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarNavAltMarkup">
          <form action='/sessions?_method=DELETE' method='POST'>
            <input id="logout_button" type="submit" value="Log Out">
          </form>
        </div>

      </div>
  </nav>
</div>

<div class="post-container mt-4">
  <p> {{ post.postAuthor.firstName }} {{ post.postAuthor.lastName }} posted:</p>
  <h1>{{ post.message }}</h1>
  {{#if post.image.data}}
    <img src="/posts/{{post._id}}/image" alt="PostImage">
  {{/if}}

  <p>Posted at: {{post.timestamp}}</p>

  <button class="likeButton btn btn-outline-primary shadow-sm" data-postid="{{ post._id }}">Like</button>
  <span id="likesCount-{{ post._id }}">{{ post.likes.length }}</span> likes
</div>

<script>
  const likeButtons = document.querySelectorAll('.likeButton');

  likeButtons.forEach(button => {
    button.addEventListener('click', () => {
      const postId = button.getAttribute('data-postid');
      const likesCountElement = document.getElementById(`likesCount-${postId}`);

      fetch(`/posts/${postId}/like`, { method: 'POST' })
        .then(response => response.json())
        .then(data => {
          likesCountElement.textContent = data.likesCount;
        })
        .catch(error => {
          console.log(error);
        });
    });
  });
</script>


<div class="comments-container mt-4">
  <form action="/posts/{{ post._id }}/comments" method="POST">
    <textarea name="message" placeholder="Leave a comment"></textarea>
    {{#if error}}
      <p style="color: red;">{{ error }}</p> 
    {{/if}}
    <button type="submit">Submit</button>
  </form>
  <ul class="comments">
    <p>Comments on your post:</p>
    {{#each post.comments}}
  
    <span>{{ this.message }}</span>
    <span>{{this.author}}</span>
    <span>{{ timeAgo this.commentTime }}</span><br>
    {{/each}}
  </ul>
</div>