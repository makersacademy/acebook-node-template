<form id="new-post-form" action="/posts" method="post">
  <label for="message">Message: </label>
  <input type="hidden" name="authorFirstName" value="{{user.firstName}}">
  <input type="hidden" name="authorSurname" value="{{user.surname}}">
  <input type="hidden" name="userId" value="{{user._id}}">
  <textarea id="message" type="text" name="message" value="" required pattern=".*\S+.*"></textarea>
  <input type="submit" value="Submit" class="submit-button">
</form>
