<ul>
  <li><form action='/sessions?_method=DELETE' method='POST'>
      <input type="submit" value="Log Out">
    </form> </li>
  <li><a href="/users/{{session_user._id}}"><img src={{session_user.picture}} width="50" height="50"/></a></li>
  <li><a href="/users/{{session_user._id}}">User Page</a></li>
  <li><a class="new-post-link" href="/posts/new">New post</a></li>
  <li><a class="home" href="/posts">Home</a></li>
</ul>

<h1>Post</h1>

<a href="/users/{{post.user_id}}">User</a>
{{post.message}}

<form action="/posts/{{post._id}}/create" method="post">
    <input id="message" type="text" name="message" maxlength="250" required>
    <input type="submit" value="Create">
</form>

<ul class="comments">
  {{#each comments}}
  <a href="/users/{{this.user_id}}">User Profile</a>
  <li>{{this.message}}</li> 
  {{/each}}
</ul>

<a class="new-post-link" href="/posts">Posts</a>