<div class="body_not_navbar">
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<h1>Timeline</h1>

  <a class="new-post-link" href="/posts/new">Create a new post</a>
  <br>
  <a class="upload-photo" href="/images/upload">Upload a photo</a>
  <br>
<br>

{{#each posts}}
<br>
<div class="card text-center w-75">
  <div class="card-header">
    <h5>USER: <a href="/users/profile/{{this.user._id}}">{{this.username}}</a></h5>
  </div>
  <div class="card-body">
    <p class="card-title"><b>Message:</b> {{this.message}} </p>
    <p class="card-title"><b>Likes:</b> {{this.likes}} </p>
    <form action="/posts/{{this._id}}/like" method="post"><button type="submit">Like!</button></form>
      {{!-- <p class="card-text">Comment</p> --}}
    </div>
    <p class="card-title"><a class="comments card-title" href="/posts/{{this._id}}">x comments</a></p>
    {{!-- <p class="card-text">Comment</p> --}}
  </div>

{{/each}}
</div>
