<h1>Timeline</h1>
<ul class="posts">
  {{#each posts}}
  <li>{{this.message}}</li>
    <li>{{this.createdAt}}</li>
    <li>likes: {{this.likes}}</li>
  <ul>
    {{#each this.comments}}
      <li>{{this.note}}</li>
    {{/each}}
  </ul>
    <form action='/posts/comment/{{this.id}}' method='GET'>
      <input type="submit" value="Comment">
    </form>

    {{!-- new untested code --}}
     <form action='/posts/delete/{{this.id}}' method='POST'>
      <input type="submit" value="Delete">
    </form>
    <form action='/posts/like/{{this.id}}' method='POST'>
      <input type="submit" value="Like">
    </form>
    {{!-- end of code --}}
 
  {{/each}}
</ul>

<a class="new-post-link" href="/posts/new">New post</a>
