          <img class="user__avatar story__avatar" src="images/img/Allen.jpeg" alt="" />
          <h4>The Axylotls</h4>
        </div>
        <!-- story ends -->
      </div>

      <!-- message sender starts -->
      <div class="messageSender">
        <div class="messageSender__top">
          <img class="user__avatar" src="images/img/Makers.png" alt="" />

          <form id="new-post-form" action="/posts" method="post">
            {{!-- <label for="message">Whats on your mind? </label> --}}
            <input id="message" type="text" name="message" value="" placeholder=" Whats on your mind?  {{blank}}">
            <input id="submit" type="submit" value="POST">

            {{!-- <div id="blank-message!">{{blank}}</div> --}}
          </form>

        </div>

        <div class="messageSender__bottom">
          <div class="messageSender__option">
            <span style="color: red" class="material-icons"> videocam </span>
            <h3>Live</h3>
          </div>

          <div class="messageSender__option">
            <span style="color: green" class="material-icons"> photo_library </span>
            <h3>Photo</h3>
          </div>

          <div class="messageSender__option">
            <span style="color: orange" class="material-icons"> insert_emoticon </span>
            <h3>Feeling</h3>
          </div>
        </div>
      </div>
      <!-- message sender ends -->


      {{!-- <ul class="posts"> --}}
        <div class="posts">
          {{#each posts}}
          <li>{{this.message}}</li>

          {{!-- button on form does not need layout.js --}}
          {{!-- <form action="/posts/like" method="post"> --}}
            {{!-- <button class="like" type="submit" name="post" value="{{this._id}}">{{this.likes.length}}
              likes</button> --}}
            {{!-- </form> --}}

          {{!-- layout.js sends fetch to /posts/like from this button --}}
          <button class="like" type="submit" value="{{this._id}}">{{this.likes.length}} likes</button>

          {{/each}}
        </div>
        {{!--
      </ul> --}}

      <!-- post starts -->
      <div class="post">
        <div class="post__top">
          <img class="user__avatar post__avatar" src="images/img/Makers.png" alt="" />
          <div class="post__topInfo">
            <h3>The Axylotls</h3>
            <p>25 April at 20:30</p>
          </div>
        </div>

        <div class="post__bottom">
          <p>Rest In Peace QUEEN</p>
        </div>

        <div class="post__image">
          <img src="images/img/QUEEN.webp" alt="" />
        </div>

        <div class="post__options">
          <div class="post__option">
            <span class="material-icons"> thumb_up </span>
            <p>Like</p>
          </div>

          <div class="post__option">
            <span class="material-icons"> chat_bubble_outline </span>
