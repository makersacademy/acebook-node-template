{{! log out button }}
<form action="/sessions?_method=DELETE" method="POST">
  <input type="submit" value="Sign Out" />
</form>

{{! Profile page link}}
<a href="/profile/user/{{user.username}}">Profile Page</a>

<h1>Timeline</h1>
<ul class="posts">
  {{#each posts}}
    <li class="post">
      {{this.timestamp}}
      <br />
      <div class="username">
        <a href="/profile/{{this.username}}">{{this.username}}</a>
      </div>
      <br />
      {{this.message}}
      <br>
      <div class="image">
        <input type="hidden" name="id" value={{this._id}} />
        <img src="https://images.unsplash.com/photo-1535262412227-85541e910204?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1738&q=80">
      </div>
      <br>
      <form class="delete-post" action="/posts/delete" method="post">
        <input type="hidden" name="id" value={{this._id}} />
        <input type="submit" value="Delete" />
      </form>

      {{#if this.likes}}
      <div class="likes">
       Likes: {{this.likes.length}}
        </div>
      {{/if}}
      <form class="like-post" action="/posts/like" method="post">
        <input type="hidden" name="id" value={{this._id}} />
        <input type="submit" value="like" />
      </form>
    </li>
  {{/each}}
</ul>

<a class="new-post-link" href="/posts/new">New post</a>