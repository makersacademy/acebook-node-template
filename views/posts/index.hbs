        {{!-- FORM MODIFIED FOR IMAGE --}}
        <form id="new-post-form" action="/posts" method="post" enctype="multipart/form-data">
          <input type="file" name="image" accept="image/*"><br>
          <input id="message" type="text" name="message" value="" placeholder="{{placeholderMessage}}">
          <input id="submit" type="submit" value="POST">
        </form>
      </div>
    </div>
    <!-- message sender ends -->

    <!-- post starts -->
    {{#each posts}}
    <div class="post">
      <div class="post__top">
        <img class="user__avatar post__avatar" src="data:;base64,{{this.user.profilePic.data}}" alt="" />
        <div class="post__topInfo">
          <a id="post_name" href="/profile">
            <h3>{{this.user.firstName}}</h3>
          </a> <!-- Need to link post to user firstname  -->
          <p>{{this.createdAt}}</p>
        </div>
      </div>

      <div class="post__bottom">
        <p>{{this.message}}</p>
      </div>

      <div class="post__image">
        <img data-test="image" src="data:;base64, {{this.img.data}}" alt="">
      </div>

      <div class="post__options">
        <div class="post__option">
          <p id="like{{this._id}}">{{this.likes.length}}</p>
          <button id="button{{this._id}}" class="like" type="submit" value="{{this._id}}"
            style="color:{{this._doc.color}}">
            <span class="material-icons">thumb_up </span>
          </button>
        </div>

        <div class="post__option">
          <span class="material-icons"> chat_bubble_outline </span>
          <p>Comment</p>
        </div>

        {{#each this.comments}}
        <div class="comment__bottom">{{this.comment}} - {{this.postedBy.firstName}} {{this.postedBy.lastName}}</div>
        <p>{{this.date}}</p>
        {{/each}}

        <form class="new-comment-form" action="/comments" method="post">
          <input type="hidden" id="postID" name="postID" value={{this._id}}>
          <input class="comment" type="text" name="comment" value="" placeholder="Comment here">
          <input class="submit-comment" type="submit" value="COMMENT">
        </form>
      </div>
    </div>
    {{/each}}


