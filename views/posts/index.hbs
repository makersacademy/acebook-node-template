<HTML>
  <script
    type="text/javascript"
    src="./javascripts/likesView.js"
    defer
  ></script>
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  <form action="/" method="GET">
    <input type="submit" value="Home" />
  </form>

  <h1>Timeline</h1>

  <ul class="posts">
    {{#each posts}}
      <p class="post-message">{{this.message}}</p>
      <div id="datestamp">Created at {{formatDate this.createdAt}}</div>
      <button
        id="like-button"
        class="{{this.id}}"
        type="submit"
        value="Like"
      >Like</button>
      <span id="likes-count-{{this.id}}">{{this.likes}}</span>
    {{/each}}
  </ul>

  <a class="new-post-link" href="/posts/new">New post</a>

  <form action="/sessions?_method=DELETE" method="POST">
    <input type="submit" id="logout" value="Log Out" />
  </form>

</HTML>