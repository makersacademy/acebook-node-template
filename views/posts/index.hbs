    <!-- message sender starts -->
    <div class="messageSender">
      <div class="messageSender__top">
        <img class="user__avatar" src="images/img/Makers.png" alt="" />

        <form id="new-post-form" action="/posts" method="post">
          {{! <label for="message">Whats on your mind? </label> }}
          <input
            id="message"
            type="text"
            name="message"
            value=""
            placeholder=" Whats on your mind?  {{blank}}"
          />
          <input id="submit" type="submit" value="POST" />

          {{!-- <div id="blank-message!">{{blank}}</div> --}}
        </form>
      </div>
    </div>
    <!-- message sender ends -->

    <!-- post starts -->
    {{#each posts}}
      <div class="post">
        <div class="post__top">
          <img
            class="user__avatar post__avatar"
            src="images/img/Makers.png"
            alt=""
          />
          <div class="post__topInfo">
            <a id="post_name" href="/profile"><h3
              >{{this.user.firstName}}</h3></a>
            <!-- Need to link post to user firstname  -->
            <p>{{this.createdAt}}</p>
          </div>
        </div>

        <div class="post__bottom">
          <p>{{this.message}}</p>
        </div>

        <div class="post__image">
          {{!-- <img src={{}} alt="" /> --}}
        </div>

        <div class="post__options">
          <div class="post__option">
            <p id="like{{this._id}}">{{this.likes.length}}</p>
            <button
              id="button{{this._id}}"
              class="like"
              type="submit"
              value="{{this._id}}"
              style="color:{{this._doc.color}}"
            >
              <span class="material-icons">thumb_up </span>
            </button>
          </div>

          {{! Comments section starts here }}

          <div class="messageSender">
            <div class="messageSender__top">
              <img class="user__avatar" src="images/img/Makers.png" alt="" />

              <form id="new-comment-form" action="/comments" method="post">
                {{! <label for="message">Whats on your mind? </label> }}
                <input
                  type="hidden"
                  id="postID"
                  name="postID"
                  value={{this._id}}
                />
                <input
                  class="comment"
                  type="text"
                  name="comment"
                  value=""
                  placeholder=" Leave a comment."
                />
                <input
                  class="submit_comment"
                  id="submit"
                  type="submit"
                  value="COMMENT"
                />

              </form>

              <button class="hide_show" type="submit"><span
                  class="material-icons"
                >
                  comment
                </span></button>

            </div>
          </div>
        </div>

        {{#each this.comments}}
          <div
            class="messageSender__top_comment"
            id="messageSender__top_comment"
          >
            <div class="comment__bottom">
              <h4>{{this.postedBy.firstName}} {{this.postedBy.lastName}}</h4>
              <p>{{this.date}}</p>
            </div>
            <p class="new_comment">{{this.comment}}</p>
          </div>
        {{/each}}
      </div>

      {{! Comments section ends here }}

    {{/each}}

