{{! log out button }}
<form action="/sessions?_method=DELETE" method="POST">
  <input type="submit" value="Sign Out" />
</form>

{{! Profile page link}}
<a href="/profile/user/{{user.username}}">Profile Page</a>

{{!-- Search page link --}}
<a href="/search">Search</a>

<h1>Timeline</h1>
<ul class="posts">
  {{#each posts}}
    <li class="post">
      {{this.timestamp}}
      <br />
      <div class="username">
        <a href="/profile/{{this.username}}">{{this.username}}</a>
      </div>
      {{this.message}}
      <br>
      {{#if this.image}}
      <div class="image">
        <input type="hidden" name="id" value={{this._id}} />
        <img src={{this.image}}>
      </div>
      {{/if}}
      <br>
      <form class="delete-post" action="/posts/delete" method="post">
        <input type="hidden" name="id" value={{this._id}} />
        <input type="submit" value="Delete" />
      </form>

      {{#if this.likes}}
      <div class="likes">
       Likes: {{this.likes.length}}
        </div>
      {{/if}}
      <form class="like-post" action="/posts/like" method="post">
        <input type="hidden" name="id" value={{this._id}} />
        <input type="submit" value="like" />
      </form>

      <button id="show-comments" onclick="showComments()">
        show comments
        </button>

      
        <div class="comments d-none">
          <ul>
          {{#each comments}} 
            <li id="post-comment"> {{this}} </li>
          {{/each}} 
          </ul>
         
        </div>
    
      

        <form id="enter-comment" action="/posts/comment" method="post">
          <input type="text" id="comment" name="comment" value="" placeholder="Write a comment here..." />
          <input type="hidden" name="id" value={{this._id}} />
          <input type="submit" value="Comment">
        </form>
     
       </li>
    </li>
  {{/each}}
</ul>

<a class="new-post-link" href="/posts/new">New post</a>