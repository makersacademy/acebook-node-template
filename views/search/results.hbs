<h2>Users matching search:</h2>

  <ul class="users">
    {{!-- iterating through all users with matching first name --}}
    {{#each users2}}
      <span class="user">
        <img src="{{this.profilePic}}"
          style="width:80px" />
        <a href="/profile/{{this.username}}">{{this.username}}</a>
        <br />
      </span>
    {{/each}}
    {{!-- iterating through all users with matching last name --}}
    {{#each users1}}
      <span class="user">
        <img src="{{this.profilePic}}"
          style="width:80px" />
        <a href="/profile/{{this.username}}">{{this.username}}</a>
        <br />
      </span>
    {{/each}}
  </ul>
