  <label for="start-date">Start Date: </label>
  <input id="start-date" type="date" name="startDate" required>
  <label for="end-date">End Date: </label>
  <input id="end-date" type="date" name="endDate" required> <br>
  Sorry :( You can add some more companions later
  <label for="email-input"> Companions: </label>
  <input id="companion-email" type="email" name="companionEmails">
  <input type="submit" value="Add Trip">
</form>

